<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answer</th>
      <th>User</th>
      <th>Views</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.body %></td>
        <td><%= answer.user.name %></td>
        <td><%= answer.view_count %></td>
        <td><%= answer.question.body %></td>
        <td><%= link_to 'Show', user_question_answer_path(answer.user, answer.question, answer) %></td>
        <td><%= link_to 'Edit', edit_user_question_answer_path(answer.user, answer.question, answer) %></td>
        <td><%= link_to 'Destroy', user_question_answer_path(answer.user, answer.question, answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

